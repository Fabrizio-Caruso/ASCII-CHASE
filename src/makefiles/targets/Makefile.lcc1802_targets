	-DNO_BLINKING \
	-DLCC1802_JOYSTICK \
	$(LCC1802_C_OPTS) \
	-DFORCE_GHOSTS_NUMBER=8 \
	$(SOURCE_PATH)/../tiny_lcc1802_combo.c
	rm -rf $(SOURCE_PATH)/../tiny_lcc1802_combo.c
	mv $(SOURCE_PATH)/../../a.hex $(BUILD_PATH)/TINY_cidelsa_destroyer_12K.hex

