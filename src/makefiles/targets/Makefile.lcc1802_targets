	-DNO_COLOR \
	-DNO_BLINKING \
	-DLCC1802_JOYSTICK \
	$(REDUCED_LCC1802_C_OPTS) \
	-DFORCE_GHOSTS_NUMBER=6 \
	$(SOURCE_PATH)/../reduced_tiny_lcc1802_combo.c
	rm -rf $(SOURCE_PATH)/../reduced_tiny_lcc1802_combo.c
	mv $(SOURCE_PATH)/../../a.hex $(BUILD_PATH)/TINY_cidelsa_destroyer_8K.hex


