	rm -rf $(SOURCE_PATH)/../tmc600_no_end_screen.c
	mv $(SOURCE_PATH)/../a.hex $(BUILD_PATH)/FULL_tmc600_24k.hex


debug_draco: tiny_cidelsa_combo.c
	$(LCC1802) $(INCLUDE_OPTS) -I$(SOURCE_PATH) $(DRACO_32K_OPTS)  \
	-D__CIDELSA__ -D__DRACO__ $(EXTRA_DRAW_SKIP) \
	-DTINY_GAME \
	-DNO_COLOR \
	-DNO_BLINKING \
	-DLCC1802_JOYSTICK \
	-DANIMATE_PLAYER \
	$(COMX_MACROS) \
	-DNO_WAIT -DNO_INPUT -DNO_SLEEP \
	-DFORCE_GHOSTS_NUMBER=8 \
	$(SOURCE_PATH)/../tiny_cidelsa_combo.c
	# rm -rf $(SOURCE_PATH)/../tiny_cidelsa_combo.c
	mv $(SOURCE_PATH)/../a.hex $(BUILD_PATH)/DEBUG_draco.hex

draco: full_cidelsa_combo.c
	$(LCC1802) $(INCLUDE_OPTS) -I$(SOURCE_PATH) $(DRACO_32K_OPTS)  \
	-D__CIDELSA__ -D__DRACO__ $(EXTRA_DRAW_SKIP) \
	-DFULL_GAME \
	-DNO_COLOR \
	-DNO_BLINKING \
	-DLCC1802_JOYSTICK \
	-DBETWEEN_LEVEL -DEND_SCREEN \
	$(COMX_MACROS) \
	-DFORCE_GHOSTS_NUMBER=8 \
	$(SOURCE_PATH)/../full_cidelsa_combo.c
	rm -rf $(SOURCE_PATH)/../full_cidelsa_combo.c
	mv $(SOURCE_PATH)/../a.hex $(BUILD_PATH)/FULL_draco.hex


