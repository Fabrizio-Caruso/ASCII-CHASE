tmc600_no_end_screen.c: full_combo_rand.c
	cat \
	$(COMX_EXTRA_FILES) \
	$(SOURCE_PATH)/../full_combo_rand.c > $(SOURCE_PATH)/../tmc600_no_end_screen.c
	rm full_combo_rand.c

COMX_MACROS ?= \
	-D__LCC1802__ \
	-DFORCE_NO_CONIO_LIB \
	-DNO_SET_SCREEN_COLORS \
	-DALT_SLEEP \
	-DLESS_TEXT \
	-DALT_RAND \
	-DMEMORY_MAPPED \
	-DROCKETS_NUMBER=2 \
	-DALT_PRINT \
	-DNO_SMALL_LETTERS \
	-DSOUNDS \
	-DINITIAL_SLOWDOWN=21150


REDUCED_TINY_TMC600_MACROS ?= \
	-D__LCC1802__ \
	-DFORCE_NO_CONIO_LIB \
	-DNO_SET_SCREEN_COLORS \
	-DNO_SLEEP \
	-DLESS_TEXT \
	-DNO_RANDOM_LEVEL \
	-DMEMORY_MAPPED \
	-DFLAT_BOMBS \
	-DROCKETS_NUMBER=2 \
	-DALT_PRINT \
	-DNO_SMALL_LETTERS \
	-DINITIAL_SLOWDOWN=21150

#	-DSIMPLE_STRATEGY 
#	-DDEBUG_LEVEL
#	-DNO_PRINT \


tiny_comx: tiny_comx_combo.c
	$(LCC1802) $(INCLUDE_OPTS) -I$(SOURCE_PATH) $(COMX_OPTS) \
	-D__COMX__  $(EXTRA_DRAW_SKIP) \
	-DTINY_GAME \
	-DNO_COLOR \
	-DNO_BLINKING \
	-DLCC1802_JOYSTICK \
	-DANIMATE_PLAYER \
	$(COMX_MACROS) \
	-DFORCE_GHOSTS_NUMBER=6 \
	$(SOURCE_PATH)/../tiny_comx_combo.c
	rm -rf $(SOURCE_PATH)/../tiny_comx_combo.c
	mv $(SOURCE_PATH)/../a.hex $(BUILD_PATH)/TINY_comx.hex


light_comx: light_comx_combo.c
	$(LCC1802) $(INCLUDE_OPTS) -I$(SOURCE_PATH) $(COMX_OPTS)  \
	-D__COMX__   $(EXTRA_DRAW_SKIP) \
	-DLIGHT_GAME \
	-DNO_COLOR \
	-DNO_BLINKING \
	-DLCC1802_JOYSTICK \
	-DANIMATE_PLAYER \
	$(COMX_MACROS) \
	-DFORCE_GHOSTS_NUMBER=6 \
	$(SOURCE_PATH)/../light_comx_combo.c
	rm -rf $(SOURCE_PATH)/../light_comx_combo.c
	mv $(SOURCE_PATH)/../a.hex $(BUILD_PATH)/LIGHT_comx.hex


full_comx: comx

comx: full_comx_combo.c
	$(LCC1802) $(INCLUDE_OPTS) -I$(SOURCE_PATH) $(COMX_OPTS)  \
	-D__COMX__ $(EXTRA_DRAW_SKIP) \
	-DFULL_GAME \
	-DNO_COLOR \
	-DNO_BLINKING \
	-DLCC1802_JOYSTICK \
	-DANIMATE_PLAYER \
	-DBETWEEN_LEVEL -DEND_SCREEN \
	$(COMX_MACROS) \
	-DFORCE_GHOSTS_NUMBER=7 \
	$(SOURCE_PATH)/../full_comx_combo.c
	rm -rf $(SOURCE_PATH)/../full_comx_combo.c
	mv $(SOURCE_PATH)/../a.hex $(BUILD_PATH)/FULL_comx.hex


